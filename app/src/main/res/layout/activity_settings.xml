<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Messaging.MessagesList"
    android:background="@color/backgroundBlack">

    <ImageView
        android:id="@+id/spotifyLogo"
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="9dp"
        android:src="@drawable/spotifylogo"
        app:layout_constraintEnd_toStartOf="@+id/spotibaeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/spotibaeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@+id/spotifyLogo"
        android:text="@string/app_name"
        android:textSize="40sp"
        android:theme="@style/themeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        app:backgroundTint="@color/spotifyGreen"
        app:itemIconTint="@drawable/bottom_nav_icon_color_selector"
        app:itemTextColor="@drawable/bottom_nav_icon_color_selector"
        app:menu="@menu/bottom_navigation_menu" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/spotibaeTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/defaultprofile" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/spotibaeTitle"
        android:layout_marginStart="0dp"
        android:layout_marginTop="50dp"
        android:layout_toEndOf="@+id/imageView3"
        android:text="Joe"
        android:textSize="30sp"
        android:theme="@style/themeText" />

    <ImageView
        android:id="@+id/uploadPhoto"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/spotibaeTitle"
        android:layout_marginStart="25dp"
        android:layout_marginTop="63dp"
        android:layout_toEndOf="@+id/textView"
        app:srcCompat="@drawable/uploadphoto" />

    <ImageView
        android:id="@+id/editSettings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/spotibaeTitle"
        android:layout_marginStart="10dp"
        android:layout_marginTop="63dp"
        android:layout_toEndOf="@+id/uploadPhoto"
        app:srcCompat="@drawable/editsettings" />

    <EditText
        android:id="@+id/line"
        android:layout_width="320dp"
        android:layout_height="20dp"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="5dp"
        android:backgroundTint="@color/spotifyGreen"
        android:ems="10"
        android:inputType="none"
        android:paddingBottom="25dp"
        android:textColor="@color/spotifyGreen"
        android:textColorHint="@color/spotifyGreen"
        android:textSize="14dp"
        android:theme="@style/themeText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottom_navigation"
        android:layout_below="@+id/line"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/spotifyLogo2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/spotifylogo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="50dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="50dp"
                android:layout_toEndOf="@+id/spotifyLogo2"
                android:text="@string/spotifyVerified"
                android:theme="@style/themeText" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="20dp"
                android:layout_toEndOf="@+id/spotifyLogo2"
                android:text="Button" />


        </RelativeLayout>


    </ScrollView>

</RelativeLayout>