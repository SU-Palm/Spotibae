<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Fragments.UserFrag">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/layout_bg"
                android:color="@color/spotifyGreen">

                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@+id/imageView2"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="-30dp"
                    android:backgroundTint="@color/spotifyGreen"
                    android:text="Joseph, "
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:theme="@style/themeText" />

                <TextView
                    android:id="@+id/ageText"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_below="@+id/imageView2"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="-30dp"
                    android:layout_toEndOf="@+id/nameText"
                    android:backgroundTint="@color/spotifyGreen"
                    android:text="22"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:theme="@style/themeText" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="360dp"
                    android:layout_height="400dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="-30dp"
                    app:srcCompat="@drawable/acidrao" />

                <TextView
                    android:id="@+id/bioText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nameText"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="-5dp"
                    android:layout_marginBottom="0dp"
                    android:backgroundTint="@color/spotifyGreen"
                    android:text="I love rap, old school, and hiphop"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:theme="@style/themeText" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>
</FrameLayout>